# ========================
# PHP Configuration
# ========================
PHP_MEMORY_LIMIT="256M"
PHP_UPLOAD_LIMIT="10M"
PHP_POST_MAX_SIZE="100M"
PHP_UPLOAD_MAX_FILESIZE="10M"
PHP_MAX_EXECUTION_TIME="600"
PHP_MAX_INPUT_TIME="1200"
PHP_DATE_TIMEZONE="Africa/Nairobi"
PHP_OPCACHE_ENABLE=1
PHP_OPCACHE_MEMORY_CONSUMPTION=256
PHP_OPCACHE_INTERNED_STRINGS_BUFFER=12

# ========================
# Redis Configuration
# ========================
REDIS_ENABLED="true"
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""
REDIS_DB_INDEX="0"
REDIS_TIMEOUT="1.5"
REDIS_READ_TIMEOUT="1.5"
REDIS_RETRY_TIMEOUT="16"
REDIS_CACHE_TTL="600"

# ========================
# Queue Configuration
# ========================
QUEUE_CONNECTION="redis"
QUEUE_DRIVER="redis"
QUEUE_FAILED_DRIVER="database"

# ========================
# Cache Configuration
# ========================
CACHE_DRIVER="redis"
CACHE_TTL="3600"

# ========================
# Session Configuration
# ========================
SESSION_DRIVER="redis"
SESSION_LIFETIME="120"

# ========================
# Mail Configuration
# ========================
MAIL_MAILER="smtp"
MAIL_HOST="smtp.mailtrap.io"
MAIL_PORT=2525
MAIL_USERNAME="null"
MAIL_PASSWORD="null"
MAIL_ENCRYPTION="tls"
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# ========================
# SSL/TLS Settings
# ========================
SSL_ENABLED="true"

# Certificate Details
SSL_EMAIL="wagura465@gmail.com"
SSL_COUNTRY="KE"
SSL_STATE="Nairobi"
SSL_LOCALITY="Nairobi"
SSL_ORG="Laravel Project"
SSL_OU="IT_Dept"

# Certificate Files (auto-generated)
SSL_KEY_PATH="/etc/ssl/private/laravel.key"
SSL_CERT_PATH="/etc/ssl/certs/laravel.crt"
SSL_CHAIN_PATH="/etc/ssl/certs/laravel-chain.pem"

# Certificate Renewal (Let's Encrypt)
LETSENCRYPT_ENABLED="true"
LETSENCRYPT_EMAIL="wagura465@gmail.com"
LETSENCRYPT_DOMAINS="localhost"
LETSENCRYPT_STAGING="false"

# ========================
# System Configuration
# ========================
TIMEZONE="Africa/Nairobi"
CRON_PERIOD="* * *"
CRON_MEMORY_LIMIT=128
CRON_OUTPUT="/dev/null"

# ========================
# Security Configuration
# ========================
TRUSTED_PROXIES="*"
TRUSTED_HOSTS="*"
HTTPS_ENABLED="true"

# ========================
# Setup & Management Logging
# ========================
# Log levels: debug, info, warning, error, critical, alert, emergency
LOG_LEVEL="info"

# Log file paths (relative to project root)
LOG_DIR="${LARAVEL_ROOT}/storage/logs"
LOG_CHANNEL="stack"
LOG_STACK="daily"

# Log rotation settings
LOG_ROTATION_DAYS=30
LOG_MAX_SIZE="10M"

# Timezone for log timestamps
LOG_TIMEZONE="Africa/Nairobi"

# ========================
# Performance Configuration
# ========================
OPCACHE_ENABLE="1"
OPCACHE_VALIDATE_TIMESTAMPS="0"
OPCACHE_REVALIDATE_FREQ="0"
OPCACHE_MAX_ACCELERATED_FILES="1000"
OPCACHE_MEMORY_CONSUMPTION="256"
OPCACHE_INTERNED_STRINGS_BUFFER="12"

# ========================
# Deployment Configuration
# ========================
DEPLOYMENT_ENABLED="true"
DEPLOYMENT_USER="deployer"
DEPLOYMENT_PATH="/var/www/html"
DEPLOYMENT_REPOSITORY=""
DEPLOYMENT_BRANCH="main"
DEPLOYMENT_SHARED_DIRS="storage/app storage/logs storage/framework/cache storage/framework/sessions storage/framework/views bootstrap/cache"
DEPLOYMENT_SHARED_FILES=".env"
DEPLOYMENT_WARMUP="false"

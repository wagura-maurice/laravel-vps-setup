# ========================
# Laravel Configuration
# ========================
APP_NAME="Laravel"
APP_ENV="production"
APP_KEY=""
APP_DEBUG="false"
APP_URL="http://microfinance.ubongoafrica.com"  # Change to your domain or server IP
DOMAIN_NAME="microfinance.ubongoafrica.com"  # Domain for SSL certificates
LARAVEL_ROOT="/var/www/html/default_laravel_project"
LARAVEL_STORAGE_DIR="/var/www/html/default_laravel_project/storage"
LARAVEL_CACHE_DIR="/var/www/html/default_laravel_project/bootstrap/cache"

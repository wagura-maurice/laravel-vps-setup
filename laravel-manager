#!/bin/bash
# Laravel Service Management Script
# Provides convenient commands to manage Laravel services

# Color codes for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Logging function
log() {
    echo -e "${BLUE}[$(date +'%Y-%m-%d %H:%M:%S')]${NC} $1"
}

log_success() {
    echo -e "${GREEN}[SUCCESS]${NC} $1"
}

log_warning() {
    echo -e "${YELLOW}[WARNING]${NC} $1"
}

log_error() {
    echo -e "${RED}[ERROR]${NC} $1"
}

# Function to start all Laravel services
start_services() {
    log "Starting Laravel services..."
    
    sudo systemctl start nginx
    sudo systemctl start php8.4-fpm
    sudo systemctl start mysql
    sudo systemctl start redis-server
    
    log_success "Laravel services started"
}

# Function to stop all Laravel services
stop_services() {
    log "Stopping Laravel services..."
    
    sudo systemctl stop nginx
    sudo systemctl stop php8.4-fpm
    sudo systemctl stop mysql
    sudo systemctl stop redis-server
    
    log_success "Laravel services stopped"
}

# Function to restart all Laravel services
restart_services() {
    log "Restarting Laravel services..."
    
    sudo systemctl restart nginx
    sudo systemctl restart php8.4-fpm
    sudo systemctl restart mysql
    sudo systemctl restart redis-server
    
    log_success "Laravel services restarted"
}

# Function to check status of all Laravel services
status_services() {
    echo "Nginx: $(systemctl is-active nginx)"
    echo "PHP-FPM: $(systemctl is-active php8.4-fpm)"
    echo "MySQL: $(systemctl is-active mysql)"
    echo "Redis: $(systemctl is-active redis-server)"
}

# Main execution
case "${1:-}" in
    start)
        start_services
        ;;
    stop)
        stop_services
        ;;
    restart)
        restart_services
        ;;
    status)
        status_services
        ;;
    *)
        echo "Usage: $0 {start|stop|restart|status}"
        exit 1
        ;;
esac

exit 0